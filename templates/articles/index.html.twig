{% extends 'base.html.twig' %}

{% block title %} SymphArt Articles {% endblock %}

{% block body %}  
    

    {% if articles %}

        <table id="articles" class="table table-striped table-responsive" style="width:40%; margin:0 auto"> 
            <thead>
                <tr>
                    <th colspan="3" style="text-align:center">
                        <h2> Welcome To My Articles Application </h2>  
                    
                        <a style="text-decoration:none; font-size:18px;" href="/article/new">Add New Article</a> 
                    </th>
                </tr>
                <tr> 
                    <th> Article Name </th>
                    <th> Actions </th>
                </tr>
            </thead>

            <tbody>
                {% for art in articles %}
                    <tr>
                        <td> {{ art.title }} </td>
                        <td> 
                            <a href="/article/{{art.id}}" class="btn btn-dark"> Show</a>
                            <a href="/article/edit/{{art.id}}" class="btn btn-info""> Edit</a> 
                            <a href="#" class="btn btn-danger delete-article" data-id="{{art.id}}"> Delete</a> 
                            
                        </td>
                    </tr>
                {%  endfor %}
            </tbody>
        </table>

    {% else %}
        <p> No articles to display </p>
    {% endif %}

{% endblock %}


{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
{% endblock%}


